<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ShapedButton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/topframe"
        android:layout_weight=".9">

        <net.fadvisor.funwitharabic.ShapedButton
            android:id="@+id/btnStart"
            android:onClick="ButtonsOnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ShapedButton:color="#0000ff"
            ShapedButton:normalBackground="@drawable/hex_button_white_normal"
            ShapedButton:pressedBackground="@drawable/hex_button_white_pressed"
            android:text="@string/start"
            android:layout_gravity="center" />

        <net.fadvisor.funwitharabic.ShapedButton
            android:id="@+id/btnExit"
            android:onClick="ButtonsOnClick"
            android:layout_width="100dp"
            android:layout_height="110dp"
            ShapedButton:color="#888888"
            ShapedButton:normalBackground="@drawable/hex_button_white_normal"
            ShapedButton:pressedBackground="@drawable/hex_button_white_pressed"
            android:text="@string/exit"
            android:layout_gravity="top|right"
            android:layout_marginRight="60dp"
            android:layout_marginTop="90dp" />

        <net.fadvisor.funwitharabic.ShapedButton
            android:id="@+id/btnAboutUs"
            android:onClick="ButtonsOnClick"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:text="@string/aboutus"
            ShapedButton:pressedShift="10dp"
            ShapedButton:color="#00ff00"
            ShapedButton:normalBackground="@drawable/hex_button_white_normal"
            ShapedButton:pressedBackground="@drawable/hex_button_white_pressed"
            android:layout_gravity="left|top"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="60dp" />

        <net.fadvisor.funwitharabic.ShapedButton
            android:id="@+id/btnPlayGames"
            android:onClick="ButtonsOnClick"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:text="Test"
            ShapedButton:pressedShift="10dp"
            ShapedButton:color="#00ffff"
            ShapedButton:normalBackground="@drawable/hex_button_white_normal"
            ShapedButton:pressedBackground="@drawable/hex_button_white_pressed"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="90dp" />

        <net.fadvisor.funwitharabic.ShapedButton
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:text="@string/resultsbtn"
            android:id="@+id/resultsbtn"
            ShapedButton:normalBackground="@drawable/hex_button_white_normal"
            ShapedButton:pressedBackground="@drawable/hex_button_white_pressed"
            ShapedButton:color="#ff0000"
            android:onClick="ButtonsOnClick"
            android:layout_gravity="right|center_vertical" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/bottomframe"
        android:layout_weight=".1">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="New Button"
            android:id="@+id/button2" />
    </FrameLayout>
<SurfaceView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/surfaceViewAnimGuy"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true"
android:layout_below="@+id/btnAboutUs"
android:layout_alignRight="@+id/btnExit"
android:layout_alignEnd="@+id/btnExit" />

</LinearLayout>
