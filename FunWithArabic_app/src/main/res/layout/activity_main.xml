<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ShapedButton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    android:gravity="center">

    <net.fadvisor.funwitharabic.ShapedButton
        android:id="@+id/btnStart"
        android:onClick="ButtonsOnClick"
        android:layout_width="200dp"
        android:layout_height="200dp"
        ShapedButton:color="#0000ff"
        android:text="@string/start"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <net.fadvisor.funwitharabic.ShapedButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/resultsbtn"
        android:id="@+id/resultsbtn"
        ShapedButton:color="#ff0000"
        android:onClick="ButtonsOnClick"
        android:layout_alignBottom="@+id/btnStart"
        android:layout_toLeftOf="@+id/btnStart"
        android:layout_toStartOf="@+id/btnStart" />

    <net.fadvisor.funwitharabic.ShapedButton
        android:id="@+id/btnAboutUs"
        android:onClick="ButtonsOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aboutus"
        ShapedButton:pressedShift="10dp"
        ShapedButton:color="#00ff00"
        android:layout_above="@+id/btnStart"
        android:layout_alignRight="@+id/btnStart"
        android:layout_alignEnd="@+id/btnStart" />

    <net.fadvisor.funwitharabic.ShapedButton
        android:id="@+id/btnExit"
        android:onClick="ButtonsOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ShapedButton:color="#888888"
        android:text="@string/exit"
        android:layout_below="@+id/btnStart"
        android:layout_alignRight="@+id/btnStart"
        android:layout_alignEnd="@+id/btnStart" />

</RelativeLayout>
