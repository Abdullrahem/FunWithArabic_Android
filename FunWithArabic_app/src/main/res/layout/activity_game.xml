<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="net.fadvisor.funwitharabic.GameActivity"
    android:background="@drawable/bg">


    <TextView
        android:id="@+id/txtQInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/titleInstruction"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:background="#b4ffffff"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/txtQ"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:text="Q: What is the thing that is can be you are not?"
        android:textColor="#ffFF0000"
        android:textIsSelectable="false"
        android:textSize="40sp"
        android:background="@drawable/q_background"
        android:layout_alignTop="@+id/txtQT"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/txtQT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:text="Q: What is the thing that is can be you are not?"
        android:textColor="#ff000000"
        android:textIsSelectable="false"
        android:textSize="40sp"
        android:background="@drawable/qt_background"
        android:layout_below="@+id/txtQInfo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btn0"
        style="@style/button_selection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="ButtonsOnClick"
        android:text="New Button 0"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btn1"
        style="@style/button_selection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="ButtonsOnClick"
        android:text="New Button 1"
        android:layout_below="@+id/btn0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btn2"
        style="@style/button_selection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="ButtonsOnClick"
        android:text="New Button 2"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btn3"
        style="@style/button_selection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="ButtonsOnClick"
        android:text="New Button 3"

        android:layout_below="@+id/btn2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btnNew"
        style="@style/style_btn_blue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:onClick="ButtonsOnClick"
        android:text="@string/btnNew"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:layout_below="@+id/btn3"
        android:layout_alignRight="@+id/btn3"
        android:layout_alignEnd="@+id/btn3"
        android:layout_toRightOf="@+id/btnBack"
        android:layout_toEndOf="@+id/btnBack"/>

    <Button
        android:id="@+id/btnBack"
        style="@style/style_btn_blue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:onClick="ButtonsOnClick"
        android:text="@string/btnBack"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_below="@+id/btn3"
        android:layout_alignLeft="@+id/btn3"
        android:layout_alignStart="@+id/btn3"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:id="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/wrong_ans_count"
            android:textSize="20sp"
            android:textColor="#e10000"
            android:gravity="center"
            android:background="#b4ffffff"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/result_count"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="#b4ffffff"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/right_ans_count"
            android:gravity="center"
            android:textColor="#25e400"
            android:textSize="20sp"
            android:background="#b4ffffff"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>

